{
  "install": "pip3 install --user -r moduller.txt",
  "start": "PYTHONUNBUFFERED=true python3 bot.py",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ],
    "install": {
      "include": [
        "^moduller\\.txt$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh"
      ]
    },
    "throttle": 2000
  }
}